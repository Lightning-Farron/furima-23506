<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
  <div class="Card__title">
    <h2>カード情報</h2>
  </div>
  <div class="Card_info">
    【カード番号】
    <br>
    <%= "**** **** **** " + @card[:last4] %>
    <%# カード番号の下4桁を取得 %>

    <br>
    【有効期限】
    <br>
    <%= @card[:exp_month] %>
    <%# 有効期限の「月」を取得 %>
    /
    <%= @card[:exp_year] %>
    <%# 有効期限の「年」を取得 %>
  </div>
  <div class="Account__info">
  <br>
    <h2>ユーザー情報</h2>
  </div>
  <div class="AccountPage__form">
    <%= form_with model: current_user, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
      <div class="FormField">
        <div class="FormField__name">
          <%= f.label :nickname %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :nickname, autofocus: true %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__email">
          <%= f.label :email %>
        </div>
        <div class="FormField__email">
          <%= f.email_field :email %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__password">
          <%= f.label :password %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :password %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__password">
          <%= f.label :last_name %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :last_name %>
        </div>
      </div>
            <div class="FormField">
        <div class="FormField__password">
          <%= f.label :first_name %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :first_name %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__password">
          <%= f.label :last_name_reading %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :last_name_reading %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__password">
          <%= f.label :first_name_reading %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :first_name_reading %>
        </div>
      </div>
      <div class="FormField">
        <div class="FormField__password">
          <%= f.label :birthday %>
        </div>
        <div class="FormField__name">
          <%= f.text_field :birthday %>
        </div>
      </div>
      <br>
      <%= f.submit "更新する" %>
    <% end %>
   <br>
   <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
   <br>
   <%= link_to "商品一覧へ戻る", root_path %>
  </div>
</div>